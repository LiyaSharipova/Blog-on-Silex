{% extends "layout.html.twig" %}



{% block content %}
    <!-- Page Content -->

    <div class="row">

        <!-- Blog Entries Column -->
        <div class="col-md-10">

            <h1 class="page-header">
                All Posts
                {% if page == 'userPage' %}
                    by  <a href="{{ path('profile',{id: user.id} )}}">{{ user.username }}</a>
                {% endif %}
                <small> Total number of posts is {{ count }}</small>
            </h1>

            <!-- First Blog Post -->


            {% for post in posts %}

                <h2>
                    <a href="{{ path('postPage',{id: post.id} )}}">{{ post.title }}</a>
                </h2>
                {% if page == 'allPage' %}
                    <p class="lead">
                        by <a href="{{ path('profile',{id: post.author.id} )}}">{{ post.author.username }}</a>
                    </p>
                {% endif %}
                <p><span class="glyphicon glyphicon-time"></span> {{ post.date }}</p>

                <p>{{ post.content|raw }}</p>
                <a class="btn btn-primary" href="{{ path('postPage',{id: post.id} )}}">Read More <span
                            class="glyphicon glyphicon-chevron-right"></span></a>

                <hr>
            {% endfor %}




            <!-- Pager -->
            <ul class="pager">
                <li class="previous">
                    <a href="#">&larr; Older</a>
                </li>
                <li class="next">
                    <a href="#">Newer &rarr;</a>
                </li>
            </ul>

        </div>



    </div>
    <!-- /.row -->

    <hr>

    <!-- Footer -->
    <footer>
        <div class="row">
            <div class="col-lg-12">
                <p>Copyright &copy; Your Website 2014</p>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <!-- /.row -->
    </footer>





{% endblock %}
